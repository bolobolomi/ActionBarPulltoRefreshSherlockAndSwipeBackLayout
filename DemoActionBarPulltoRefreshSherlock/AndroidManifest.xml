<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock" >

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock" >
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.ListViewActivity"
            android:label="@string/activity_listview"
            android:theme="@style/Theme.Sherlock.Light" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.ScrollViewActivity"
            android:label="@string/activity_scrollview"
            android:theme="@style/Theme.Sherlock.CustomPtrHeader" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.GridViewActivity"
            android:label="@string/activity_gridview"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.WebViewActivity"
            android:label="@string/activity_webview" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.FragmentTabsActivity"
            android:label="@string/activity_fragment_tabs"
            android:theme="@style/Theme.Sherlock.Light.DarkActionBar" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.FragmentTabsViewPagerActivity"
            android:label="@string/activity_fragment_tabs_vp"
            android:theme="@style/Theme.Sherlock.Light" />
        <activity
            android:name="uk.co.senab.actionbarpulltorefresh.samples.actionbarsherlock.TestActivity"
            android:label="@string/title_activity_test" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
